<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battle - Card Battler</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/battle.css">
</head>
<body>
    <div class="battle-container">
        <div class="battle-header">
            <div class="turn-counter">Turn: <span id="turnCount">1</span></div>
            <div class="battle-timer" id="battleTimer">2:00</div>
        </div>

        <div class="battlefield">
            <div class="enemy-field">
                <!-- Enemy cards will be rendered here -->
            </div>

            <div class="battle-log">
                <div class="log-content"></div>
            </div>

            <div class="player-field">
                <!-- Player cards will be rendered here -->
            </div>
        </div>

        <div class="action-panel">
            <div class="selected-card-info"></div>
            <div class="skill-buttons"></div>
            <button id="endTurnBtn" class="end-turn-btn">End Turn</button>
        </div>
    </div>

    <template id="card-template">
        <div class="battle-card" data-card-id="">
            <div class="card-header">
                <span class="card-name"></span>
                <span class="card-type"></span>
            </div>
            <div class="card-image">
                <img src="" alt="">
                <div class="hp-bar">
                    <div class="hp-fill"></div>
                    <span class="hp-text"></span>
                </div>
                <div class="shield-indicator hidden">
                    <span class="shield-value"></span>
                </div>
            </div>
            <div class="buff-container"></div>
        </div>
    </template>

    <script src="/js/battle.js"></script>
</body>
</html>